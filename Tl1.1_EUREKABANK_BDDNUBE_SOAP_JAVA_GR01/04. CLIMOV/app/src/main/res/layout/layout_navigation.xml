<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.35"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:adjustViewBounds="true"
            android:contentDescription="Logo"
            android:src="@drawable/logo" />

        <Button
            android:id="@+id/btnNavMovimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/nav_button_background"
            android:drawableStart="@drawable/icon_movimientos"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/nav_movimientos"
            android:textAllCaps="false"
            android:textColor="@color/nav_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNavRetiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/nav_button_background"
            android:drawableStart="@drawable/icon_retiro"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/nav_retiro"
            android:textAllCaps="false"
            android:textColor="@color/nav_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNavDeposito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/nav_button_background"
            android:drawableStart="@drawable/icon_deposito"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/nav_deposito"
            android:textAllCaps="false"
            android:textColor="@color/nav_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNavTransferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/nav_button_background"
            android:drawableStart="@drawable/icon_transferencia"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/nav_transferencia"
            android:textAllCaps="false"
            android:textColor="@color/nav_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNavBalances"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/nav_button_background"
            android:drawableStart="@drawable/icon_balances"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/nav_balances"
            android:textAllCaps="false"
            android:textColor="@color/nav_text"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_logout"
            android:drawableStart="@drawable/icon_logout"
            android:drawablePadding="16dp"
            android:gravity="start|center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="@string/nav_cerrar_sesion"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.65"
        android:background="@color/background" />

</LinearLayout>
